<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_fragment_kaiyan_video_with_cover_recyclerView_imageView"
        android:layout_width="240dp"
        android:layout_height="140dp"
        android:src="@drawable/dribbble_1x" />

    <TextView
        android:id="@+id/item_fragment_kaiyan_video_with_cover_recyclerView_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="最可怕的乐园"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_fragment_kaiyan_video_with_cover_recyclerView_category_textView"
            android:text="#创意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_fragment_kaiyan_video_with_cover_recyclerView_duration_textView"
            android:text="3'20''"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
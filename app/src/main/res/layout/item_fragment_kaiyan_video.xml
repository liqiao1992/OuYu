<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_fragment_kaiyan_video_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/dribbble_1x" />

   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"/>-->
    <LinearLayout
        android:background="@drawable/boman_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_fragment_kaiyan_video_title_textView"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="五音不全的迪士尼公主"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:id="@+id/item_fragment_kaiyan_video_category_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#广告" />

            <TextView
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <TextView
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:id="@+id/item_fragment_kaiyan_video_duration_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03'20''" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>